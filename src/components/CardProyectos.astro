---
interface Props {
    urlImagen?: string;
    descripcion?: string;
    tecnologias?: string[];
}

const { urlImagen, descripcion, tecnologias } = Astro.props;
---
<section class="w-full h-96 flex flex-col justify-center items-center shadow-lg rounded-3xl transition-transform duration-300 transform hover:scale-105 hover:cursor-pointer bg-classic-white">
    <div class="w-full h-64">
        <img class="w-full h-full rounded-t-3xl object-cover" src={urlImagen} alt="imagen">
    </div>
    <div class="flex flex-wrap gap-7 pl-2 mt-2">
        {tecnologias && tecnologias.map((tecnologia) => (
            <span class="w-16 text-sm font-medium bg-classic-secundary dark:bg-classic-primary text-classic-black px-2 py-1 rounded">{tecnologia}</span>
        ))}
    </div>
    <div class="mt-2">
        <p class="text-base font-medium p-2 text-center">{descripcion}</p>
    </div>
</section>
